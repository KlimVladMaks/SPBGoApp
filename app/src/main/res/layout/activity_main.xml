<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nameField"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorMain"
            android:textSize="20sp"

            app:met_underlineColor="@color/colorMain"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/purple_500"
            app:met_textColorHint="@color/purple_500"
            app:met_maxCharacters="30"
            app:met_primaryColor="@color/colorError"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/logInField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/logInField"
            android:inputType="text"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorMain"
            android:textSize="20sp"

            app:met_underlineColor="@color/colorMain"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/purple_500"
            app:met_textColorHint="@color/purple_500"
            app:met_maxCharacters="15"
            app:met_primaryColor="@color/colorError"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passwordField"
            android:inputType="textPassword"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorBtnRegistration"
            android:textSize="20sp"

            app:met_underlineColor="@color/colorMain"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/purple_500"
            app:met_textColorHint="@color/purple_500"
            app:met_maxCharacters="20"
            app:met_primaryColor="@color/colorError"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/passwordCheckField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passwordCheckField"
            android:inputType="textPassword"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorBtnRegistration"

            android:textSize="20sp"
            app:met_underlineColor="@color/colorMain"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/purple_500"
            app:met_textColorHint="@color/purple_500"
            app:met_primaryColor="@color/colorError"
            app:met_maxCharacters="20"
            app:met_singleLineEllipsis="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/btn_registration"
            android:text="@string/btnRegistration"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


    </LinearLayout>

</RelativeLayout>

</layout>